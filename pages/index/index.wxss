.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #FFF5F5;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.welcome {
  font-size: 36rpx;
  color: #FF69B4;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.stats-content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stats-item {
  text-align: center;
  padding: 20rpx;
  background: #FFF5F5;
  border-radius: 12rpx;
}

.stats-num {
  font-size: 36rpx;
  color: #FF69B4;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 省钱统计卡片样式 */
.savings-card {
  background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
}

.savings-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.savings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 105, 180, 0.1);
  border-radius: 12rpx;
}

.savings-label {
  font-size: 28rpx;
  color: #666;
}

.savings-value {
  font-size: 32rpx;
  color: #FF69B4;
  font-weight: bold;
}

.savings-tips {
  text-align: center;
  padding: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

.quick-actions {
  margin: 32rpx 0;
}

.cute-btn {
  background: #FF69B4;
  color: #FFFFFF;
  border-radius: 99rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.3);
  border: none;
}

.cute-btn::after {
  border: none;
}

.tips {
  text-align: center;
  padding: 32rpx;
}

.tips .tip-text {
  display: block;
  margin-bottom: 8rpx;
  color: #999;
  font-size: 28rpx;
} 