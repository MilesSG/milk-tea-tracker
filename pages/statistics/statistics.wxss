.container {
  padding: 24rpx;
  background: #FFF5F5;
  min-height: 100vh;
}

.goal-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.setting-btn {
  background: #FFE4E1;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
}

.setting-text {
  color: #FF69B4;
  font-size: 24rpx;
}

.progress-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.progress-circle {
  position: relative;
  width: 300rpx;
  height: 300rpx;
}

.progress-canvas {
  width: 100%;
  height: 100%;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.progress-text .label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.progress-text .value {
  font-size: 48rpx;
  color: #FF69B4;
  font-weight: bold;
}

.legend {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-text {
  font-size: 24rpx;
  color: #666666;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-dialog {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-dialog {
  transform: translateY(0);
}

.modal-content {
  padding: 24rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
}

.modal-header .title {
  font-size: 32rpx;
  font-weight: 500;
}

.cancel-btn, .confirm-btn {
  font-size: 28rpx;
  color: #666666;
}

.confirm-btn {
  color: #FF69B4;
}

.picker-wrapper {
  display: flex;
  justify-content: center;
}

.goal-picker {
  width: 100%;
}

/* 日历样式 */
.calendar {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.arrow {
  color: #FF69B4;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.current-month {
  font-size: 32rpx;
  font-weight: 500;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #FFE4E1;
}

.weekday {
  color: #999;
  font-size: 24rpx;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 2rpx;
  padding-top: 10rpx;
}

.day-cell {
  aspect-ratio: 1;
  padding: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day-number {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.other-month .day-number {
  color: #CCC;
}

.brand-logos {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 4rpx;
  max-width: 100%;
}

.brand-logo {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
} 